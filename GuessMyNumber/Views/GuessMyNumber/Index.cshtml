@{
    ViewData["Title"] = "Guessing Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to my game</h1>
    <h3>I think of a number between 1 and 100 and you can guess that number.</h3>
    <h3>Good luck!</h3>
</div>
<br />
<form class="text-center" asp-controller="GuessMyNumber" asp-action="Index" method="post">
    <div class="mx-auto p-4 text-center bg-white shadow-sm">
        <label for="guess">Your guess: </label>
        <input type="number" name="guess" id="guess" />

    </div>
    <br />
    <div class="mx-auto p-4 text-center bg-white shadow-sm">
        
        <button type="submit" class="btn btn-primary">Check</button>
        <a asp-controller="GuessMyNumber" asp-action="Index" method="pre" class="btn btn-secondary">Restart</a>
    </div>
</form>

@if (ViewBag.Message != null)
{
    <h4 class="text-center">@ViewBag.Message</h4>
}

@if (ViewBag.GuessCount != null)
{
    <p class="text-center">Number of guesses: @ViewBag.GuessCount</p>
}

@if (ViewBag.HighScores != null)
{
    <div class="mx-auto p-4 bg-white shadow-sm">
        <h3>High Scores</h3>
        <ul>
            @foreach (var score in ViewBag.HighScores)
            {
                <li>@score</li>
            }
        </ul>
    </div>
}